#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path(File.dirname(__FILE__) + '/../lib')

require 'epub_validator'

args = ARGV.dup
ARGV.clear
command = args.shift.strip rescue 'help'

print "\nChecking...."
ev = EpubValidator.check(command)
if (ev[:valid] == 1)
  print "Passed.\n"
else
  print "FAILED!\n\n"
  puts ev[:message]
end

